<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootViewAddFriend">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/toolbarAddFriend"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter CC Code For Your Friend"
        android:textSize="24sp"
        android:layout_below="@id/toolbarAddFriend"
        android:textColor="@color/colorPrimary"
        android:padding="16dp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/titleTextAddFriend"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="112233"
        android:layout_below="@id/titleTextAddFriend"
        android:padding="16dp"
        android:inputType="number"
        android:id="@+id/codeEditAddFriend"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/codeEditAddFriend"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:elevation="32dp"
        android:id="@+id/submitBtnAddFriend"/>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBarAddFriend"
        android:visibility="invisible" />
</RelativeLayout>